<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Details"
    tools:showIn="@layout/activity_details">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="266dp"
        android:layout_height="165dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/img1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="261dp"
        android:layout_height="27dp"
        android:text="Parc National des oiseaux de Djoudj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="289dp"
        android:layout_height="224dp"
        android:layout_marginTop="272dp"
        android:background="@android:color/white"
        android:text="Le parc national des oiseaux du Djoudj (PNOD) est situé à une soixantaine de kilomètres au nord de Saint-Louis du Sénégal. Paradis des oiseaux migrateurs, le parc est la troisième réserve ornithologique du monde.  Créé en 1971, agrandi en 1975, le parc a été classé en 1980 « zone humide d'importance internationale » par la Convention de Ramsar1, puis inscrit au Patrimoine mondial de l'Unesco en 1981.  Le Djoudj est un site exceptionnel qui s'étend sur 16 000 hectares dans le delta du Sénégal. Cette cuvette est l'une des rares contrées vertes du Sahel. "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="170dp"
        android:layout_height="39dp"
        android:background="@color/colorPrimary"
        android:text="Hotels à proximité"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

</android.support.constraint.ConstraintLayout>