<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".bang1"
    tools:showIn="@layout/activity_bang1">

    <ImageView
        android:id="@+id/im6"
        android:layout_width="399dp"
        android:layout_height="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hotel_mame_c_bang" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="241dp"
        android:layout_height="169dp"
        android:background="@android:color/white"
        android:text="L'hôtel Mame Coumba Bang est situé à l'entrée de la ville de Saint Louis du Sénegal, dans un paysage verdoyant. La connexion internet via WiFi y est disponible gratuitement.   Les chambres de l'hôtel disposent de salle de bain privative, de téléviseur et de balcon, pour vous accueillir dans la douceur et la sécurité. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <Button
        android:id="@+id/bttn8"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:text="En savoir plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</android.support.constraint.ConstraintLayout>