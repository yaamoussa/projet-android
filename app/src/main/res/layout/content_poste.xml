<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Poste"
    tools:showIn="@layout/activity_poste">

    <ImageView
        android:id="@+id/im4"
        android:layout_width="368dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hoteldelaposte" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="273dp"
        android:layout_height="226dp"
        android:background="@android:color/white"
        android:text="L’Hôtel de la Poste, adresse mythique de l’Aéropostale, vous accueille à Saint-Louis du Sénégal, au cœur du centre-ville historique, à la sortie du pont Faidherbe.  Vous séjournerez dans le principal hôtel d’affaires et de tourisme de Saint-Louis, dans lequel nous vous proposons 39 chambres et suites aux standards internationaux. Nous mettons à votre disposition 2 salles équipées (climatisation, rétroprojecteur, Wifi) et dédiées à l’organisation de vos séminaires, conférences, événements."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <Button
        android:id="@+id/bttn4"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="En savoir plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />


</android.support.constraint.ConstraintLayout>