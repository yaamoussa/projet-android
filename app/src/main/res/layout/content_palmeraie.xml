<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Palmeraie"
    tools:showIn="@layout/activity_palmeraie">


    <ImageView
        android:id="@+id/im3"
        android:layout_width="351dp"
        android:layout_height="193dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012"
        app:srcCompat="@drawable/la_palmeraie" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="266dp"
        android:layout_height="175dp"
        android:background="@android:color/white"
        android:text="L’Hôtel La Palmeraie est situé à l’extrémité sud de l’île de Saint-Louis  offrant une superbe vue sur le fleuve et la Langue de Barbarie.  L’hébergement est constitué d’une trentaine de chambres et suites.  Toutes les chambres sont équipées de TV, de téléphone, de climatiseur et de salle de bains privative, celles avec vue sur le fleuve sont plus lumineuses que celles qui donnent sur le patio."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796" />

    <Button
        android:id="@+id/bttn3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="En savoir plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

</android.support.constraint.ConstraintLayout>