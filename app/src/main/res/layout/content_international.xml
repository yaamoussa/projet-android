<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".international"
    tools:showIn="@layout/activity_international">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="399dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/internatinal_vdn_hotel_dakar_png" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="277dp"
        android:layout_height="223dp"
        android:text="En séjournant dans International Vdn Hotel Dakar Quatre Etoiles vous pourrez apprécier son style moderne et les nombreux services proposés qui le rendent le lieu idéal pour les voyages d’affaires ou pour les vacances.  Le bon goût italien et un ameublement moderne feront de cet établissement la pointe d’innovation et d’excellence à Dakar.  L’Hotel est classé Quatre Etoiles certifié par le ministère du Tourisme.  L’hôtel jouit d’un emplacement stratégique: à proximité immédiate du salon CICES de Dakar. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805" />

    <Button
        android:id="@+id/buttoninternational"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:text="En savoir plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />
</android.support.constraint.ConstraintLayout>