<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".onomo"
    tools:showIn="@layout/activity_onomo">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="298dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/onomo_hotel_dakar_png" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="277dp"
        android:layout_height="203dp"
        android:text="Les 107 chambres, lumineuses et ultraconfortables, sont dotées d’un balcon ombragé et d’une grande baie vitrée donnant sur des jardins intérieurs. D’une superficie de 16 à 18 m2, les chambres disposent d’une douche à l’italienne, de toilettes séparées, d’une télévision écran plat et d’un accès aux chaînes internationales, d’un espace de travail, d’un coffre-fort électronique et d’un accès wifi gratuit."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <Button
        android:id="@+id/buttononomo"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="En savoir plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />
</android.support.constraint.ConstraintLayout>