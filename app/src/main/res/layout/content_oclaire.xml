<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".oclaire"
    tools:showIn="@layout/activity_oclaire">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="384dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@drawable/hoteloclair_de_la_lune_png" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="296dp"
        android:layout_height="266dp"
        android:text="L’hôtel est situé cité Comico qui a l’âme d’un petit village au cœur de la trépidante capitale qu’est Dakar.  Vous serez très rapidement séduits par la légendaire « teranga » Sénégalaise très vive dans ce quartier où tout le monde se connait.  L’Hôtel Au Clair De Lune, placé à seulement 60 mètres de la VDN (Voie de Dégagement Nord  qui relie le centre-ville et les plages)  profite de cet axe essentiel sans en avoir les inconvénients (le bruit, car il est placé en 2ème rang).  L’hôtel « Au Clair De Lune » est conçu pour que vous vous sentiez chez vous dès le seuil de la porte d’entrée  franchie.  Toute l’équipe sera à votre disposition afin que votre séjour soit des plus agréables."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <Button
        android:id="@+id/buttonoclaire"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="En savoir plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />
</android.support.constraint.ConstraintLayout>